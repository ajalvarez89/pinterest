<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="thumbnail">
				<p>
				  <strong>Name:</strong>
				  <%= @pin.name %>
				</p>
				<p>
				  <strong>Description:</strong>
				  <%= @pin.description %>
				</p>

				<p>
				  <strong>Photo:</strong>
				  <%= image_tag(@pin.photo, :style => 'width:400px') %>
				</p>

				<%= link_to 'Edit', edit_pin_path(@pin), :class => 'btn' %> |
				<%= link_to 'Back', pins_path , :class => 'btn'%>
			</div>
		</div>
	</div>		
</div>

