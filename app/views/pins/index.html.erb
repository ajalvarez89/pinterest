<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Vista Pins(Jugadores)</h1>

     <% @pins.each do |pin| %>
      <div class="row">
        <div class="col-md-4">
          <div class="thumbnail">
            <%= pin.description %>
            <%= image_tag(pin.photo, :class => 'img-fluid') %>
            <div class="buttons" style="margin-top:10px;margin-bottom:10px">
              <%= link_to 'Show', pin, :class => 'btn' %>
              <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn'  %>
              <% if user_signed_in? %>
              <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn'  %>
              <% end %>
            </div>
           </div>
        </div>  
      </div>
    <% end %>
  <br>
  <% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path , :class => 'btn' %>
  <% end %>
</div>